.menu_bar {
  margin-top:30rpx;
  width: 100%;
  height:100rpx;
  display: flex;
  justify-content: space-around;
  border-top: solid 1px #d0d0d0;
  border-bottom: solid 1px #d0d0d0;
}

.menu_bar_item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #ababab;
}

.menu_bar_active {
  border-bottom: solid 2px #38AFC5;
  color:#38AFC5;
}

.menu_bar_item_text {
  text-align: center;
  font-size: 35rpx;
  padding: 20rpx;
}


