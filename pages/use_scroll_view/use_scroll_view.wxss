.item-list{
  margin-bottom: 20rpx;
  background: #fff;
  padding: 20rpx;
  height: 166rpx;
  width: 100%;
  position: relative;
}

 .answer-list{
   display: flex;
   flex-wrap: wrap;
   margin-top: 20rpx;
 }
.answer-list >view{
  width: 50%;
  margin-bottom: 10rpx;
}
.item-index{
  position:absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  font-size: 80rpx;
  font-weight: 800;
  color: rgb(255, 153, 0);
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(55,55,55,.2);
}